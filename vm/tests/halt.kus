def EXIT_STATUS 	0x6
def SYSCALL_WRITE	0x1

let msg: "hello, world!"

/*

Test block comment

*/

fn start:
	@.l1:
		load	r0, 	0x10	     // this value of r1 is overwritten later
		load	r1, 	EXIT_STATUS
		load	r1, 	0x20
		load	r0, 	r1
		nop
		load	sc,		SYSCALL_WRITE	// select syscall number
		load	r0,		0x1 			// select stdin
		load	r1, 	msg.ptr
		load	r2, 	msg.len
		syscall
		jump 	@.l1

	@.exit:
		load	sc,		EXIT_STATUS
		halt
